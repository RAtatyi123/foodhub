
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Add background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Remove windowActionBar -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Другие атрибуты темы -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.MyCustomTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основной цвет бренда -->
        <item name="colorPrimary">#ED2174</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Вторичный цвет бренда -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Добавление цвета фона -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Удаление ActionBar -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.MyApplicationMain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основной цвет бренда -->
        <item name="colorPrimary">#ED2174</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Вторичный цвет бренда -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">#E91E63</item>

        <!-- Добавление цвета фона -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Удаление ActionBar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Настройка верхней панели (Toolbar) -->
        <item name="toolbarStyle">@style/Widget.MyApplication.Toolbar</item>
    </style>

    <style name="Widget.MyApplication.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!-- Настройка текста заголовка -->
        <item name="android:textAppearance">@style/TextAppearance.MyApplication.Toolbar.Title</item>
        <item name="titleTextAppearance">@style/TextAppearance.MyApplication.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.MyApplication.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <!-- Настройка цвета текста заголовка -->
        <item name="android:textColor">@color/white</item>
    </style>


</resources>